---
import BaseLayout from '@layouts/BaseLayout.astro';
import { useTranslations } from '@i18n/index';

const t = useTranslations('en');
---

<BaseLayout title={t('about.title')} description={t('about.description')}>
  <div class="mx-auto max-w-3xl px-4 py-16">
    <header class="mb-12">
      <h1 class="text-3xl font-bold">{t('about.title')}</h1>
    </header>

    <div class="prose prose-gray dark:prose-invert max-w-none">
      <section class="mb-12">
        <h2>Profile</h2>
        <p>
          Hello! I'm the owner of this site.
          I work as a software engineer and am interested in various technologies, mainly web development.
        </p>
      </section>

      <section class="mb-12">
        <h2>About This Site</h2>
        <p>
          This site is a blog for recording technical notes and things I learn.
          I mainly write about the following topics:
        </p>
        <ul>
          <li>Web Development (Frontend / Backend)</li>
          <li>Programming Languages</li>
          <li>Tools and Development Environment</li>
          <li>Notes from Technical Books</li>
        </ul>
      </section>

      <section>
        <h2>Contact</h2>
        <ul>
          <li>GitHub: <a href="https://github.com" target="_blank" rel="noopener noreferrer">@username</a></li>
          <li>X: <a href="https://x.com" target="_blank" rel="noopener noreferrer">@username</a></li>
        </ul>
      </section>
    </div>
  </div>
</BaseLayout>
