---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import BlogCard from '@components/blog/BlogCard.astro';
import { useTranslations } from '@i18n/index';

const t = useTranslations('en');

const posts = (await getCollection('blog', ({ id, data }) => {
  return id.startsWith('en/') && !data.draft;
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={t('blog.title')} description={t('blog.description')}>
  <div class="mx-auto max-w-4xl px-4 py-16">
    <header class="mb-12">
      <h1 class="text-3xl font-bold">{t('blog.title')}</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-400">{t('blog.description')}</p>
    </header>

    {posts.length > 0 ? (
      <div class="grid gap-6">
        {posts.map((post) => (
          <BlogCard post={post} lang="en" />
        ))}
      </div>
    ) : (
      <p class="text-gray-600 dark:text-gray-400">{t('common.noResults')}</p>
    )}
  </div>
</BaseLayout>
