---
import BaseLayout from '@layouts/BaseLayout.astro';
import { useTranslations } from '@i18n/index';

const t = useTranslations('ja');
---

<BaseLayout title={t('nav.home')} description="技術ブログ兼ポートフォリオサイト">
  <div class="mx-auto max-w-4xl px-4 py-16">
    <!-- Hero Section -->
    <section class="mb-16 text-center">
      <h1 class="mb-4 text-4xl font-bold tracking-tight md:text-5xl">
        mcmc-tech
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        技術ブログ兼ポートフォリオサイト
      </p>
    </section>

    <!-- Recent Posts Section -->
    <section class="mb-16">
      <h2 class="mb-8 text-2xl font-bold">{t('blog.recentPosts')}</h2>
      <div class="text-gray-600 dark:text-gray-400">
        <!-- TODO: Display recent blog posts -->
        <p>記事がまだありません。</p>
      </div>
    </section>

    <!-- Featured Projects Section -->
    <section>
      <h2 class="mb-8 text-2xl font-bold">{t('projects.title')}</h2>
      <div class="text-gray-600 dark:text-gray-400">
        <!-- TODO: Display featured projects -->
        <p>プロジェクトがまだありません。</p>
      </div>
    </section>
  </div>
