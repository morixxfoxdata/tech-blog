---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import { useTranslations } from '@i18n/index';

const t = useTranslations('ja');

const posts = await getCollection('blog', ({ id, data }) => {
  return id.startsWith('ja/') && !data.draft;
});

// Collect all tags with count
const tagCounts = new Map<string, number>();
posts.forEach((post) => {
  post.data.tags.forEach((tag) => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

const sortedTags = [...tagCounts.entries()].sort((a, b) => b[1] - a[1]);
---

<BaseLayout title={t('common.tags')} description="ブログ記事のタグ一覧">
  <div class="mx-auto max-w-4xl px-4 py-16">
    <header class="mb-12">
      <h1 class="text-3xl font-bold">{t('common.tags')}</h1>
    </header>

    {sortedTags.length > 0 ? (
      <div class="flex flex-wrap gap-4">
        {sortedTags.map(([tag, count]) => (
          <a
            href={`/ja/tags/${tag}`}
            class="inline-flex items-center gap-2 rounded-lg border border-gray-200 px-4 py-2 transition-colors hover:border-gray-300 hover:bg-gray-50 dark:border-gray-800 dark:hover:border-gray-700 dark:hover:bg-gray-900"
          >
            <span>{tag}</span>
            <span class="rounded-full bg-gray-100 px-2 py-0.5 text-xs text-gray-600 dark:bg-gray-800 dark:text-gray-400">
              {count}
            </span>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-gray-600 dark:text-gray-400">タグがありません</p>
    )}
  </div>
</BaseLayout>
